<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ListasActivity" android:clickable="false">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DC7005"
            android:textAlignment="center"
            app:buttonGravity="top"
            app:title="Fotos"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="0dp"/>
    <ListView
            android:id="@+id/listaFotos"
            android:layout_width="366dp"
            android:layout_height="666dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/toolbar2" app:layout_constraintVertical_bias="0.0"
            android:scrollbarAlwaysDrawHorizontalTrack="true" android:forceHasOverlappingRendering="true"/>
    <Button
            android:text="+"
            android:layout_width="52dp"
            android:layout_height="48dp" android:backgroundTint="#4CAF50" android:id="@+id/btnAdicionar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.955" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.048"/>

</androidx.constraintlayout.widget.ConstraintLayout>